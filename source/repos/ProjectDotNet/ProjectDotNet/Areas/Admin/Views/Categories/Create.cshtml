@model ProjectDotNet.Models.Categories

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Status" class="control-label pe-1">Hide</label>
                <input asp-for="Status" type="radio" name="status" value="0" />   <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label pe-1">Show</label>
                <input asp-for="Status" type="radio" name="status" checked value="1" />

            </div>
            <div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group text-center pt-3">
                <input type="submit" value="Create" class="btn btn-primary" />  <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
