<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin cPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @RenderSection("Css", required: false)
</head>
<body>
    <header>
        <nav class="navbar mb-0 navbar-dark navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>Vian Perfume</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                    </ul>
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Account</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3 row mx-0 px-0">
        <div class="col-3 py-3 px-3" style="min-height: 100vh">
            <div class=" py-5 px-2" style="background-color: #002e4512; min-height: 500px; border-radius: 30px">
                <h1 class="text-center fz2">Menu</h1>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="text-decoration-none" style="display: block; font-size: 16px; padding: 7px 12px; border-bottom: 1px solid #002e4512; color: unset; ">Category</a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="text-decoration-none" style="display: block; font-size: 16px; padding: 7px 12px; border-bottom: 1px solid #002e4512; color: unset; ">Products</a>
               
            </div>
           
        </div>
        <div class="col-9 pt-3">
            <div class="pt-5">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="footer text-muted container-fluid">
        <div class="container text-center">
            &copy; 2023 - <strong>Vian Perfume</strong>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>